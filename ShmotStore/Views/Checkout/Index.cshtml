@using ShmotStore.Models
@model  CartViewModel
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{

    <table class="table">
        <tr>
            <th>Товар</th>
            <th>Цена</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }

    </table>
    @Html.ActionLink("Оформить покупку", "Buy")

}